{
	"name": "myfirst_copy_pipeline",
	"properties": {
		"activities": [
			{
				"name": "copy_csv_file",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "local-c-drive/bronze/productdetails.csv"
					},
					{
						"name": "Destination",
						"value": "local-d-drive/silver/"
					}
				],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "BinarySink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings",
							"copyBehavior": "FlattenHierarchy"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "ProductData",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "Target_Product_set",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}